    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Table">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F44336">

        <TextView
            android:text="Fila 1">
        </TextView>
        <TextView
            android:text="Fila 1 col 2">
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E91E63">
        <TextView
            android:text="Fila 2">
        </TextView>

        <TextView
            android:text="Fila 2 col 2">
        </TextView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9C27B0">
        <TextView
            android:text="Fila 3">
        </TextView>
        <TextView
            android:text="Fila 3 col 2">
        </TextView>
    </TableRow>
</TableLayout>